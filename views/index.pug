doctype
html
  head
    title dbexplorer
    link(rel='stylesheet', href='/styles.css')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    script(src="index.js")
    link(href="https://fonts.googleapis.com/css?family=Raleway:600" rel="stylesheet")
    link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet')
    link(href='/favicon.svg', rel='shortcut icon', type="image/svg")

  body.bg-blue-gradient
    .database-selector
      a#mysql-selector(href="#mysql") MySQL
      a#postgres-selector(href="#postgres") PostgreSQL

    form.panel.overflow-hidden(
      action="/mysql"
      method="post"
      id="mysql"
    )
      label.large Connect To MySQL Database
      if mysqlError
        div.error Authentication Error! Try again
      input(
        type='text'
        name='host'
        id='mysql-host'
        placeholder='Host'
        value=mysqlCredentials.host
      )

      input(
        type='text'
        name='user'
        id='mysql-user'
        placeholder='User'
        value=mysqlCredentials.user
      )
      input(
        type='password'
        name='password'
        id='mysql-password'
        placeholder='Password'
        value=mysqlCredentials.password
      )
      label Remember Credentials
      input(
        type='checkbox'
        name='remember'
        id='mysql-remember'
        checked=mysqlCredentials.remember
      )
      input.submit.bg-red-gradient(
        type='submit'
        value='Connect'
      )


    form.panel.overflow-hidden(
      action="/postgresql"
      method="post"
      id="postgres"
    )
      label.large Connect To PostgreSQL Database
      if postgresError
        div.error Authentication Error! Try again
      input(
        type='text'
        name='host'
        id='postgres-host'
        placeholder='Host'
        value=postgresCredentials.host
      )

      input(
        type='text'
        name='user'
        id='postgres-user'
        placeholder='User'
        value=postgresCredentials.user
      )
      input(
        type='password'
        name='password'
        id='postgres-password'
        placeholder='Password'
        value=postgresCredentials.password
      )
      input(
        type='text'
        name='port'
        id='postgres-port'
        placeholder='Port'
        value=postgresCredentials.port
      )
      label Remember Credentials
      input(
        type='checkbox'
        name='remember'
        id='postgres-remember'
        checked=postgresCredentials.remember
      )
      input.submit.bg-blue-gradient(
        type='submit'
        value='Connect'
      )
